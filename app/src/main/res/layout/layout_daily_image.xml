<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_1"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:text="2018-09-10"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/txt_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:text="星期二"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_day_of_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:singleLine="true"
        android:text="6"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/sp_75"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_date_of_china"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:text="戊戌年，八月二七"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/txt_progress_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:text="第 287 天，进度已消耗 87.99%"
        android:textSize="@dimen/sp_9" />

    <ProgressBar
        android:id="@+id/progress_for_day_of_year"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:max="100"
        android:progress="78"
        android:progressDrawable="@drawable/progress" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">


        <TextView
            android:id="@+id/txt_ancient_poetry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="望月-其一"

            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/txt_ancient_poetry_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_ancient_poetry_title"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="空山新雨后，空气晚来秋"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/txt_ancient_poetry_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/txt_ancient_poetry_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:singleLine="true"
            android:layout_marginTop="@dimen/dp_20"
            android:text="杜甫"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_9" />
    </RelativeLayout>
</LinearLayout>
